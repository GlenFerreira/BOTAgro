# Configuração da API de IA (OpenAI)
OPENAI_API_KEY=sua_chave_api_aqui

# Configuração da API Oficial do WhatsApp (Meta)
# Obtenha em: https://developers.facebook.com/apps/
WHATSAPP_TOKEN=seu_token_de_acesso_aqui
WHATSAPP_PHONE_NUMBER_ID=seu_phone_number_id_aqui

# Token de verificação do webhook (pode ser qualquer string secreta)
VERIFY_TOKEN=meu_token_secreto_123

# URL pública do seu servidor (para webhook)
# Use ngrok ou similar para desenvolvimento local
WEBHOOK_URL=https://seu-dominio.com
# Para desenvolvimento local com ngrok: https://seu-id.ngrok.io

# Porta do servidor (padrão: 3000)
PORT=3000

# Configuração do bot (opcional)
BOT_NAME=Assistente
MAX_TOKENS=500
TEMPERATURE=0.7

